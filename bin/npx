docker run \
  -e TZ=$(cat /etc/timezone) \
  --user $(id -u):$(id -g) \
  --mount type=bind,source="${HOME}/.npm",target=/.npm \
  --mount type=bind,source="${HOME}/.config/configstore",target=/.config/configstore \
  --mount type=bind,source="$(pwd)",target=/project \
  --rm \
  --entrypoint=/usr/bin/npx \
  --workdir /project \
  nodejs:14 "$@"
